{
  "author": "TSavo",
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.2",
    "@wopr-network/plugin-types": "^0.2.0",
    "grammy": "^1.40.0",
    "winston": "^3.11.0"
  },
  "description": "Telegram plugin for WOPR using Grammy",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.3.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "wopr",
    "wopr-plugin",
    "telegram",
    "grammy",
    "bot"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@wopr-network/wopr-plugin-telegram",
  "scripts": {
    "build": "tsc",
    "check": "biome check src/ && tsc --noEmit",
    "format": "biome format --write src/",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "types": "dist/index.d.ts",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
